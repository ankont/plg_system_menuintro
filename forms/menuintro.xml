<?xml version="1.0" encoding="utf-8"?>
<form>
  <fields name="params">
    <fieldset name="menuintro" label="PLG_SYSTEM_MENUINTRO_FIELDSET_LABEL" description="PLG_SYSTEM_MENUINTRO_FIELDSET_DESC">
      <field name="menuintro_enable" type="radio" label="PLG_SYSTEM_MENUINTRO_ENABLE" default="0" layout="joomla.form.field.radio.switcher">
        <option value="0">JNO</option>
        <option value="1">JYES</option>
      </field>
    
      <!-- Enable: Title -->
      <field name="menuintro_title_enable" type="radio" label="PLG_SYSTEM_MENUINTRO_TITLE_ENABLE" description="PLG_SYSTEM_MENUINTRO_TITLE_ENABLE_DESC" default="0" layout="joomla.form.field.radio.switcher" showon="menuintro_enable:1" >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
      </field>

      <!-- Use page title (εμφανίζεται μόνο αν Enable=Yes) -->
      <field name="menuintro_title_usepage" type="radio" label="PLG_SYSTEM_MENUINTRO_TITLE_USEPAGE" description="PLG_SYSTEM_MENUINTRO_TITLE_USEPAGE_DESC" default="0" layout="joomla.form.field.radio.switcher" showon="menuintro_title_enable:1[AND]menuintro_enable:1">
        <option value="0">JNO</option>
        <option value="1">JYES</option>
      </field>
    
      <!-- Title (εμφανίζεται μόνο αν Enable=Yes) -->
      <field name="menuintro_title" type="text" label="PLG_SYSTEM_MENUINTRO_TITLE" description="PLG_SYSTEM_MENUINTRO_TITLE_DESC" showon="menuintro_title_enable:1[AND]menuintro_enable:1" />

      <!-- Heading tag (εμφανίζεται μόνο αν Enable=Yes) -->
      <field name="menuintro_heading_tag" type="list" label="PLG_SYSTEM_MENUINTRO_HEADING_TAG" default="h1" showon="menuintro_title_enable:1[AND]menuintro_enable:1" >
        <option value="h1">H1</option>
        <option value="h2">H2</option>
        <option value="h3">H3</option>
        <option value="div">DIV</option>
      </field>

      <field name="menuintro_article" type="modal_article" label="PLG_SYSTEM_MENUINTRO_ARTICLE" description="PLG_SYSTEM_MENUINTRO_ARTICLE_DESC" default="" showon="menuintro_enable:1" />

      <!-- Enable: Custom intro text -->
      <field name="menuintro_text_enable" type="radio" label="PLG_SYSTEM_MENUINTRO_TEXT_ENABLE" description="PLG_SYSTEM_MENUINTRO_TEXT_ENABLE_DESC" default="0" layout="joomla.form.field.radio.switcher" showon="menuintro_enable:1" >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
      </field>

      <!-- Custom intro text (εμφανίζεται μόνο αν Enable=Yes) -->
      <field name="menuintro_text" type="editor" label="PLG_SYSTEM_MENUINTRO_TEXT" description="PLG_SYSTEM_MENUINTRO_TEXT_DESC" filter="JComponentHelper::filterText" buttons="true" width="700" height="250" showon="menuintro_text_enable:1[AND]menuintro_enable:1" />

      <field name="menuintro_container_class" type="text" label="PLG_SYSTEM_MENUINTRO_CONTAINER_CLASS"
             description="PLG_SYSTEM_MENUINTRO_CONTAINER_CLASS_DESC" default="" showon="menuintro_enable:1" />
    </fieldset>
  </fields>
</form>
